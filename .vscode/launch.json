{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug EcpOS (QEMU)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/kernel.elf",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "miDebuggerServerAddress": "localhost:1234",
      "stopAtEntry": true,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
    
  ]
}